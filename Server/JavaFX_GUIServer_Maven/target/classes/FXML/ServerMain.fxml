            prefWidth="150.0" style="-fx-background-color: #D9D9D9; -fx-background-radius: 31;" text="start server"
            GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
        <font>
          <Font size="14.0"/>
        </font>
    </Button>
